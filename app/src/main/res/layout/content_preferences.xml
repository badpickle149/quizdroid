<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_preferences"
        tools:context=".PreferencesActivity"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <TextView android:layout_width="match_parent"
              android:labelFor="@+id/downloadURL"
              android:text="Download URL"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"
              android:textAlignment="center"
              android:layout_height="wrap_content"/>

    <EditText android:layout_width="match_parent"
              android:id="@+id/downloadURL"
              android:hint="www.example.com/example.json"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"
              android:layout_height="wrap_content"/>

    <Button android:layout_width="wrap_content"
            android:id="@+id/saveURLBtn"
            android:text="Save"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="match_parent"
              android:labelFor="@+id/minuteSetting"
              android:text="Update Interval"
              android:layout_marginTop="15dp"
              android:textAlignment="center"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"
              android:layout_height="wrap_content"/>

    <EditText android:layout_width="match_parent"
              android:id="@+id/minuteSetting"
              android:hint="10"
              android:layout_height="wrap_content"/>

    <Button android:layout_width="wrap_content"
            android:id="@+id/saveUpdateIntervalBtn"
            android:text="Save"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

</LinearLayout>